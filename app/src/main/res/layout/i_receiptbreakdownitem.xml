<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/md_72dip"
              android:gravity="center_vertical">


    <RelativeLayout
        android:layout_width="@dimen/md_48dip"
        android:layout_height="@dimen/md_48dip"
        android:layout_marginLeft="@dimen/md_12dip">


        <ImageView
            android:id="@+id/ivItemIco"
            android:layout_width="@dimen/md_40dip"
            android:layout_height="@dimen/md_40dip"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tvItemIco"
            android:layout_width="@dimen/avatar_lessmargin"
            android:layout_height="@dimen/avatar_lessmargin"
            android:layout_centerInParent="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="24dip"
            />



    </RelativeLayout>


    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/md_16dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Jack"
            android:textColor="@color/text_black_87"/>

        <TextView
            android:id="@+id/tvItemAmmount"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Cool Alarm"
            android:textColor="@color/text_black_54"/>

        <EditText
            android:visibility="gone"
            android:id="@+id/etItemName"
            android:background="@drawable/rec_radmd2_str1_primarydark"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Jack"
            android:textColor="@color/text_black_87"/>

        <EditText
            android:visibility="gone"
            android:background="@drawable/rec_radmd2_str1_primarydark"
            android:id="@+id/etItemAmmount"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:text="Cool Alarm"
            android:textColor="@color/text_black_54"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibEdit"
            style="@style/ImageButton.WhiteImageSrcTransparentBg.24"
            android:layout_marginRight="@dimen/md_16dip"
            android:src="@drawable/ic_mode_edit_white_24dp"
            />


        <ImageButton
            android:id="@+id/ibDelete"
            style="@style/ImageButton.WhiteImageSrcTransparentBg.24"
            android:layout_marginRight="@dimen/md_16dip"
            android:src="@drawable/ic_delete_white_24dp"
            />

    </LinearLayout>

</LinearLayout>