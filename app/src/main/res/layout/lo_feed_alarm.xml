<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingTop="@dimen/md_24dip"
    android:paddingBottom="@dimen/md_24dip"
    android:paddingLeft="@dimen/md_16dip"
    android:paddingRight="@dimen/md_16dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle__lo_feed_alarm"
            android:text="@string/dummytext"
            android:textSize="@dimen/md_24sp"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSubTitle__lo_feed_alarm"
            android:text="@string/dummytext"
            android:textSize="@dimen/md_14sp"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ibAlarm__lo_feed_alarm"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_more_vert_white_48dp"
        style="@style/Base.Widget.AppCompat.ImageButton"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="40dip"
        android:layout_height="40dip" />


</LinearLayout>