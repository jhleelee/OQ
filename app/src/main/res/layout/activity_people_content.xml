<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.layout.activity.MainActivity"
    tools:showIn="@layout/activity_people_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jackleeentertainment.oq.ui.widget.TextViewToggleJack
            android:id="@+id/tvTab0"
            android:textSize="13dip"
            android:gravity="center"
            android:text="@string/contacts"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="56dip"/>

        <com.jackleeentertainment.oq.ui.widget.TextViewToggleJack
            android:id="@+id/tvTab1"
            android:textSize="13dip"
            android:gravity="center"
            android:text="@string/search"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="56dip"/>


    </LinearLayout>





    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fl__activity_people_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip" >



    </FrameLayout>


</LinearLayout>
