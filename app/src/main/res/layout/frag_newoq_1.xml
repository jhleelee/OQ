<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/ivPhotoMain"
                        android:layout_width="match_parent"
                        android:layout_height="200dip"/>


                    <TextView
                        android:id="@+id/tvPhotoMainEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="200dip"
                        android:text="@string/tab_to_add_opposite"/>

                    <RelativeLayout
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/ivPhotoSub"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <TextView
                            android:id="@+id/tvPhotoSubNum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/scrim_solid"
                            android:gravity="center"
                            android:text="+2"
                            android:textColor="@color/alphawhite_50"
                            android:textSize="16dip"
                            android:textStyle="bold"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/roEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="160dip"
                            android:background="@drawable/scrim_solid"/>

                        <TextView
                            android:id="@+id/tvEmpty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/tab_to_add_opposite"
                            android:textColor="@color/white"
                            android:textSize="@dimen/md_24sp"/>
                    </RelativeLayout>

                </RelativeLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            card_view:cardElevation="4dp"
                                            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/etContent"
                    style="@style/EditText.NewOQItemPhotoContent"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>


        <include
            android:id="@+id/tv_done"
            layout="@layout/tv_done"
            android:layout_width="match_parent"
            android:layout_height="56dip"/>


    </LinearLayout>


</ScrollView>