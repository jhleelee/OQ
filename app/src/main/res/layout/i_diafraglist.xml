<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ro__i_diafraglist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >


    <ImageView
        android:id="@+id/ivAva"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/md_12dip"
        android:padding="2dip"
        android:scaleType="centerCrop"/>


    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv__i_diafraglist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dip"
        android:layout_marginRight="@dimen/md_24dip"
        android:gravity="center_vertical|left"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/dummyname"
        android:textColor="@color/text_black_87"
        android:textSize="@dimen/md_14sp"/>


</RelativeLayout>