<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:layout_height="wrap_content"
    android:id="@+id/ro__i_diafraglist"
     >

    <RelativeLayout
        android:layout_centerVertical="true"
                    android:id="@+id/ro_person_photo"
                    android:layout_width="@dimen/md_48dip"
                    android:layout_height="@dimen/md_48dip">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/ivAva"
            android:layout_width="@dimen/md_40dip"
            android:padding="4dip"
            android:layout_height="@dimen/md_40dip"
            android:scaleType="centerCrop" />


    </RelativeLayout>
    <TextView
        android:id="@+id/tv__i_diafraglist"
        android:textColor="@color/text_black_87"
        android:layout_marginLeft="@dimen/md_80dip"
        android:layout_marginRight="@dimen/md_24dip"
        android:gravity="center_vertical|left"
        android:textSize="@dimen/md_14sp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="@string/dummyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>