<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/lo_smalltitlelargecontentsmallfootnote_1__cardview_plusminusdelta_actionbtn"
            layout="@layout/lo_smalltitlelargecontentsmallfootnote"
            />



        <View
            android:layout_margin="16dip"
            android:background="@color/text_black_54"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>


        <ListView
            android:id="@+id/lv"
            android:layout_margin="16dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <include
            android:id="@+id/lo_lefttext_rightoneaction_borderlesscolored"
            layout="@layout/lo_lefttext_rightoneaction_borderlesscolored"/>

    </LinearLayout>


</android.support.v7.widget.CardView>