<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    card_view:cardElevation="4dp"
                                    card_view:cardUseCompatPadding="true"
                                    android:id="@+id/cardview__cardview_receiptocr"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivReceipt__cardview_receiptocr"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_margin="16dip"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle__cardview_receiptocr"
                android:text="@string/dummytext"
                android:textSize="@dimen/md_24sp"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="16dip"
                android:id="@+id/tvSubTitle__cardview_receiptocr"
                android:text="@string/dummytext"
                android:textSize="@dimen/md_14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <include
            android:id="@+id/lo_receipt_action"
            layout="@layout/lo_receipt_action"/>
    </LinearLayout>


</android.support.v7.widget.CardView>