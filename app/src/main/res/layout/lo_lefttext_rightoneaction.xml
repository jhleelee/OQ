<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/md_8dip"
                android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/tv__lo_lefttext_rightoneaction"
        android:textSize="@dimen/md_13sp"
        android:text="@string/dummyperiod"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"/>




    <Button
        android:id="@+id/bt__lo_lefttext_rightoneaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changeperiod"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        />



</LinearLayout>