<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="96dip"
                  android:gravity="top">

        <include

            android:id="@+id/ro_person_photo_48dip__i_oppo"
            layout="@layout/ro_person_photo_48dip"
            android:layout_width="@dimen/md_40dip"
            android:layout_height="@dimen/md_40dip"
            android:layout_marginLeft="@dimen/md_12dip"
            android:layout_marginTop="@dimen/md_16dip"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/md_16dip"
            android:layout_marginRight="@dimen/md_16dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTitle__i_oppo"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="Jack"

                    android:textColor="@color/text_black_87"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/tvDate__i_oppo"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dummydate"
                    android:textColor="@color/text_black_54"
                    android:textSize="12sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAmtConfirmed"
                    style="@style/TextView.OppoAmmountItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tv_oppo_normal_iplus"
                    />

                <TextView
                    android:id="@+id/tvAmtYet"
                    style="@style/TextView.OppoAmmountItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    android:background="@drawable/tv_oppo_argued_iplus"
                    />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvAmtDone"
                    style="@style/TextView.OppoAmmountItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dip"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDeed"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dip"
                android:gravity="center_vertical|left"
                android:text="@string/dummydate"
                android:textSize="13sp"
                />


        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/material_grey500"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</LinearLayout>