<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="@dimen/md_72dip">

    <include
        android:id="@+id/ro_person_photo_48dip__lo_avatartitlesubtitle"
        android:layout_marginLeft="@dimen/md_12dip"
        android:layout_width="@dimen/md_40dip"
        android:layout_height="@dimen/md_40dip"
        layout="@layout/ro_person_photo_48dip"/>

    <LinearLayout
        android:layout_margin="@dimen/md_16dip"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle__lo_avatartitlesubtitle"
            android:gravity="center_vertical|left"
            android:text="Jack"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tvSubTitle__lo_avatartitlesubtitle"
            android:gravity="center_vertical|left"
            android:text="Cool Alarm"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>